<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    android:gravity="center"
    android:orientation="vertical"
    tools:context=".Activity.MobileNumberActivity">

    <ImageView
        android:layout_width="120dp"
        android:layout_height="120dp"
        app:srcCompat="@drawable/verify" />

    <jonomoneta.juno.moviecash.CustomTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:gravity="center"
        android:text="@string/enter_otp"
        android:textColor="@color/white"
        android:textSize="24sp" />

    <!--<jonomoneta.juno.moviecash.CustomTextView-->
        <!--android:layout_width="wrap_content"-->
        <!--android:layout_height="wrap_content"-->
        <!--android:layout_marginLeft="40dp"-->
        <!--android:layout_marginRight="40dp"-->
        <!--android:layout_marginTop="20dp"-->
        <!--android:gravity="center"-->
        <!--android:lineSpacingExtra="8dp"-->
        <!--android:text="@string/otp_desc"-->
        <!--android:textColor="@color/white"-->
        <!--android:textSize="18sp" />-->

    <jonomoneta.juno.moviecash.CustomEditText
        android:id="@+id/otpEditText"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="80dp"
        android:background="@null"
        android:gravity="center"
        android:hint="Enter OTP"
        android:padding="15dp"
        android:singleLine="true"
        android:textColor="@color/white"
        android:textColorHint="@color/light_grey"
        android:textSize="21sp" />

    <View
        android:layout_width="200dp"
        android:layout_height="1.2dp"
        android:layout_marginTop="8dp"
        android:background="@color/white" />

    <jonomoneta.juno.moviecash.CustomTextView
        android:id="@+id/resendTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="80dp"
        android:foreground="?attr/selectableItemBackground"
        android:gravity="center"
        android:padding="15dp"
        android:text="@string/resend_otp"
        android:textColor="@color/btn_color"
        android:textSize="19sp" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="80dp"
        android:gravity="center"
        android:orientation="vertical">

        <jonomoneta.juno.moviecash.CustomTextView
            android:id="@+id/startBtn"
            android:layout_width="wrap_content"
            android:layout_height="65dp"
            android:background="@drawable/btn_background"
            android:gravity="center"
            android:foreground="?attr/selectableItemBackground"
            android:paddingLeft="30dp"
            android:paddingRight="30dp"
            android:visibility="visible"
            android:text="@string/start_now"
            android:textColor="@color/white"
            android:textSize="24sp" />

        <ProgressBar
            android:id="@+id/progressBar"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_marginTop="20dp"
            android:visibility="gone" />
    </LinearLayout>

    <ImageView
        android:id="@+id/backBtn"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginTop="30dp"
        app:srcCompat="@drawable/ic_back" />


</LinearLayout>