<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    android:orientation="vertical"
    tools:context="jonomoneta.juno.moviecash.Activity.WalletActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:background="@color/grey"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/backBtn"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_marginLeft="15dp"
            android:src="@drawable/ic_back" />

        <jonomoneta.juno.moviecash.CustomTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:shadowColor="@color/background"
            android:shadowDx="2"
            android:shadowDy="2"
            android:shadowRadius="2"
            android:text="MY WALLET"
            android:textColor="@color/white"
            android:textSize="22sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginRight="8dp"
        android:background="@drawable/btn_background_two"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:padding="13dp">

        <jonomoneta.juno.moviecash.CustomTextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Wallet Amount"
            android:textColor="@color/colorAccent"
            android:textSize="18sp" />

        <jonomoneta.juno.moviecash.CustomTextViewBold
            android:id="@+id/walletAmtTV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:text="$ 0.0"
            android:textColor="@color/white"
            android:textSize="23sp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginRight="8dp"
        android:background="@drawable/btn_background_two"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:padding="13dp">

        <jonomoneta.juno.moviecash.CustomTextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Mega Wallet Amount"
            android:textColor="@color/colorAccent"
            android:textSize="18sp" />

        <jonomoneta.juno.moviecash.CustomTextViewBold
            android:id="@+id/megaWalletClaimBTN"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="15dp"
            android:background="@drawable/btn_background_paynow"
            android:paddingLeft="15dp"
            android:paddingTop="8dp"
            android:paddingRight="15dp"
            android:paddingBottom="8dp"
            android:text="CLAIM"
            android:textColor="@color/white"
            android:textSize="16sp" />

        <jonomoneta.juno.moviecash.CustomTextViewBold
            android:id="@+id/megaWalletAmtTV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:text="$ 0.0"
            android:textColor="@color/white"
            android:textSize="23sp" />

    </LinearLayout>

</LinearLayout>
