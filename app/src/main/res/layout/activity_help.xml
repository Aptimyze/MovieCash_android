<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/grey"
    android:orientation="vertical"
    tools:context="jonomoneta.juno.moviecash.Activity.HelpActivity">


    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/closeBTN"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_gravity="right"
        android:layout_margin="10dp"
        android:foreground="?attr/selectableItemBackground"
        android:src="@drawable/ic_close"
        app:civ_circle_background_color="#35707070" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp">


        <jonomoneta.juno.moviecash.CustomTextView
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="15dp"
            android:background="@drawable/help_list_background"
            android:gravity="center_vertical"
            android:paddingLeft="30dp"
            android:text="Download the Phala application."
            android:textColor="@color/white"
            android:textSize="14sp" />

        <TextView
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_centerVertical="true"
            android:background="@drawable/btn_background"
            android:backgroundTint="@color/yellow"
            android:gravity="center"
            android:text="1"
            android:textColor="@color/white"
            android:textSize="20sp"
            android:textStyle="bold" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp">


        <jonomoneta.juno.moviecash.CustomTextView
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="15dp"
            android:background="@drawable/help_list_background"
            android:gravity="center_vertical"
            android:paddingLeft="30dp"
            android:text="Open Phala Millionaire daily on time to join live quiz."
            android:textColor="@color/white"
            android:textSize="14sp" />

        <TextView
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_centerVertical="true"
            android:background="@drawable/btn_background"
            android:backgroundTint="@color/colorAccent"
            android:gravity="center"
            android:text="2"
            android:textColor="@color/white"
            android:textSize="20sp"
            android:textStyle="bold" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp">


        <jonomoneta.juno.moviecash.CustomTextView
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="15dp"
            android:background="@drawable/help_list_background"
            android:gravity="center_vertical"
            android:paddingLeft="30dp"
            android:text="Select correct answer of all questions in time limit and win quiz."
            android:textColor="@color/white"
            android:textSize="14sp" />

        <TextView
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_centerVertical="true"
            android:background="@drawable/btn_background"
            android:backgroundTint="@color/dark_sky"
            android:gravity="center"
            android:text="3"
            android:textColor="@color/white"
            android:textSize="20sp"
            android:textStyle="bold" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp">


        <jonomoneta.juno.moviecash.CustomTextView
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="15dp"
            android:background="@drawable/help_list_background"
            android:gravity="center_vertical"
            android:paddingLeft="30dp"
            android:text="The quiz winners get Crypto/Equity."
            android:textColor="@color/white"
            android:textSize="14sp" />

        <TextView
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_centerVertical="true"
            android:background="@drawable/btn_background"
            android:backgroundTint="@color/btn_color"
            android:gravity="center"
            android:text="4"
            android:textColor="@color/white"
            android:textSize="20sp"
            android:textStyle="bold" />

    </RelativeLayout>

</LinearLayout>
