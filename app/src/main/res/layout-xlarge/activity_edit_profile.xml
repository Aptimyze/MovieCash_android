<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    android:orientation="vertical"
    tools:context=".Activity.EditProfileActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/backBtn"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginLeft="25dp"
            android:src="@drawable/ic_back" />

        <jonomoneta.juno.moviecash.CustomTextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="@string/edit_prof"
            android:textColor="@color/white"
            android:textSize="30sp" />

        <ImageView
            android:id="@+id/btnDone"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_gravity="center"
            android:layout_marginRight="10dp"
            android:background="@drawable/dot"
            android:foreground="?attr/selectableItemBackground"
            android:padding="10dp"
            android:src="@drawable/ic_done" />

        <ProgressBar
            android:id="@+id/progressBar"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_gravity="center"
            android:layout_marginRight="10dp"
            android:visibility="gone" />

    </LinearLayout>

    <RelativeLayout
        android:layout_width="180dp"
        android:layout_height="180dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="20dp">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/profileImageView"
            android:layout_width="170dp"
            android:layout_height="170dp"
            android:layout_below="@+id/titleTV"
            android:layout_centerHorizontal="true"
            android:layout_centerInParent="true"
            android:src="@drawable/user"
            app:civ_border_color="@color/btn_color"
            app:civ_border_width="4dp" />

        <ImageView
            android:id="@+id/pickImgBtn"
            android:layout_width="58dp"
            android:layout_height="58dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_alignRight="@+id/profileImageView"
            android:background="@drawable/round_background"
            android:padding="13dp"
            android:src="@drawable/edit" />
    </RelativeLayout>

    <jonomoneta.juno.moviecash.CustomTextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="45dp"
        android:paddingLeft="30dp"
        android:text="Profile details"
        android:textColor="@color/white"
        android:textSize="30sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="75dp"
        android:layout_marginTop="20dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <jonomoneta.juno.moviecash.CustomTextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:paddingLeft="30dp"
            android:text="User name"
            android:textColor="@color/colorAccent"
            android:textSize="22sp" />

        <jonomoneta.juno.moviecash.CustomEditText
            android:id="@+id/userNameEditText"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1.5"
            android:background="@null"
            android:hint="Enter user name"
            android:imeOptions="actionDone"
            android:singleLine="true"
            android:text=""
            android:textColor="@color/btn_color"
            android:textColorHint="@color/light_grey"
            android:textSize="29sp" />

        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginRight="40dp"
            android:src="@drawable/ic_profile" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1.5dp"
        android:background="@color/colorAccent" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="75dp"
        android:layout_marginTop="10dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <jonomoneta.juno.moviecash.CustomTextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:paddingLeft="30dp"
            android:text="Birth date"
            android:textColor="@color/colorAccent"
            android:textSize="22sp" />

        <jonomoneta.juno.moviecash.CustomTextView
            android:id="@+id/bDateTextView"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1.5"
            android:hint="Select birth date"
            android:textColor="@color/btn_color"
            android:textColorHint="@color/light_grey"
            android:textSize="29sp" />

        <ImageView
            android:id="@+id/calendarBtn"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginRight="40dp"
            android:src="@drawable/ic_calendar" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1.5dp"
        android:background="@color/colorAccent" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="75dp"
        android:layout_marginTop="10dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <jonomoneta.juno.moviecash.CustomTextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:paddingLeft="30dp"
            android:text="Gender"
            android:textColor="@color/colorAccent"
            android:textSize="22sp" />

        <RadioGroup
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1.5"
            android:orientation="horizontal">

            <jonomoneta.juno.moviecash.CustomRadioButton
                android:id="@+id/maleRadioBtn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/gender_selector"
                android:button="@null"
                android:checked="true"
                android:foreground="?attr/selectableItemBackground"
                android:gravity="center"
                android:paddingBottom="14dp"
                android:paddingLeft="18dp"
                android:paddingRight="18dp"
                android:paddingTop="14dp"
                android:text="Male"
                android:textColor="@color/white"
                android:textSize="29sp" />

            <jonomoneta.juno.moviecash.CustomRadioButton
                android:id="@+id/femaleRadioBtn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="15dp"
                android:layout_weight="1"
                android:background="@drawable/gender_selector"
                android:button="@null"
                android:checked="false"
                android:foreground="?attr/selectableItemBackground"
                android:gravity="center"
                android:paddingBottom="14dp"
                android:paddingLeft="18dp"
                android:paddingRight="18dp"
                android:paddingTop="14dp"
                android:text="Female"
                android:textColor="@color/white"
                android:textSize="29sp" />

        </RadioGroup>

        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginRight="40dp" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1.5dp"
        android:background="@color/colorAccent" />

    <LinearLayout
        android:id="@+id/refLL"
        android:layout_width="match_parent"
        android:layout_height="75dp"
        android:layout_marginTop="20dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <jonomoneta.juno.moviecash.CustomTextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:paddingLeft="30dp"
            android:text="Referral"
            android:textColor="@color/colorAccent"
            android:textSize="22sp" />

        <jonomoneta.juno.moviecash.CustomEditText
            android:id="@+id/refferalCodeEditText"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1.5"
            android:background="@null"
            android:hint="Referral code"
            android:imeOptions="actionDone"
            android:singleLine="true"
            android:text=""
            android:textColor="@color/btn_color"
            android:textColorHint="@color/light_grey"
            android:textSize="29sp" />

        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginRight="40dp" />
    </LinearLayout>

    <View
        android:id="@+id/refView"
        android:layout_width="match_parent"
        android:layout_height="1.5dp"
        android:background="@color/colorAccent" />

    <jonomoneta.juno.moviecash.CustomTextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="35dp"
        android:paddingLeft="30dp"
        android:text="@string/category"
        android:textColor="@color/white"
        android:textSize="30sp" />

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/catTV"
        android:layout_marginTop="15dp"
        android:fillViewport="true"
        android:scrollbarSize="3dp"
        android:scrollbarThumbVertical="@color/colorAccent"
        android:scrollbars="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">


            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/categoryGridView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="20dp"
                android:layout_weight="1"
                android:paddingLeft="15dp"
                android:paddingRight="15dp" />


        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

</LinearLayout>